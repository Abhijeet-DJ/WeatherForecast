/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
}

/* Header Styles */
.header {
    background: #333;
    color: white;
    text-align: center;
    padding: 1rem;
}

/* Navigation Styles */
.navbar {
    background: #444;
    display: flex;
    flex-direction: column;
}

.navbar a {
    color: white;
    padding: 1rem;
    text-decoration: none;
    text-align: center;
    border-bottom: 1px solid #555;
}

/* Main Container */
.container {
    display: grid;
    gap: 1rem;
    padding: 1rem;
}

/* Main Content */
.main-content {
    display: grid;
    gap: 1rem;
}

.card {
    background: #f4f4f4;
    padding: 1.5rem;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Sidebar */
.sidebar {
    background: #eee;
    padding: 1.5rem;
    border-radius: 5px;
}

/* Footer */
.footer {
    background: #333;
    color: white;
    text-align: center;
    padding: 1rem;
    margin-top: auto;
}

/* Responsive Breakpoints */
@media (min-width: 600px) {
    .navbar {
        flex-direction: row;
        justify-content: space-around;
    }
    
    .navbar a {
        border-bottom: none;
    }
    
    .container {
        grid-template-columns: 2fr 1fr;
    }
    
    .main-content {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
}

@media (min-width: 900px) {
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .navbar a {
        padding: 1rem 2rem;
    }
    
    .card {
        padding: 2rem;
    }
}

/* Mobile-first adjustments */
@media (max-width: 300px) {
    html {
        font-size: 14px;
    }
    
    .header,
    .footer {
        padding: 0.5rem;
    }
}